@model List<EntityLayer.Concrete.Hatalar>
@{
    ViewData["Title"] = "Home Page";

    int id = 1;
}


<div class="text-center">
    <h1 class="display-4">Hoşgeldiniz</h1>
</div>
<!--Table-->
<table class="table table-hover table-fixed">

    <!--Table head-->
    <thead>
        <tr>
            <th>HataId</th>
            <th>Hata Başlık</th>
            <th>Hata İçerik</th>
            <th>Hata Çözüm</th>
            <th>Hata Bitti</th>
            <th></th>

        </tr>
    </thead>
    <!--Table head-->
    <!--Table body-->
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@id</th>
                <td>@item.HataBaslik</td>
                <td>@item.Hataİcerik</td>
                <td>@item.HataCozum</td>
                <td>
                    @if (item.HataBitti)
                    {
                        @:Bitti
                    }
                    else
                    {
                        @:Bitmedi
                    }
                </td>
                <td>
                    <a href="~/home/hataduzelt/@item.HataId" class="btn btn-sm btn-warning"><i class="far fa-edit"></i></a>
                    <a href="~/home/delete/@item.HataId" class="btn btn-sm btn-danger"><i class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
            id++;
        }

    </tbody>
    <!--Table body-->

</table>

<a href="~/home/YeniHata" class="btn btn-lg btn-success"><i class="fas fa-plus"></i></a>



